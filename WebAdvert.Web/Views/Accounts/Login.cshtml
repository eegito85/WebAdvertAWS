@{
    ViewData["Title"] = "Entrar";
}

@model WebAdvert.Web.Models.Accounts.LoginModel

<div class="row">
    <div class="col-md-6">
        <h4>Faça o login com seu email e senha</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="SignUp">
                Caso queira criar uma conta clique aqui
            </a>
        </h5>
        <hr/>
        <form method="post" asp-controller="Accounts" asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <div class="form-group">
                        <input asp-for="RememberMe" />
                        @Html.DisplayName("Lembrar me")
                    </div>
                </div>
            </div>
            <button type="submit" class="btn-primary">Login</button>
        </form>
    </div>
</div>

